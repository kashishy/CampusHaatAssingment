<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="#3D3D3D">
            </stroke>

            <corners
                android:radius="10dp">
            </corners>
            <solid
                android:color="#5B9CBE">
            </solid>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="#3D3D3D">
            </stroke>
            <corners
                android:radius="10dp">
            </corners>
            <solid
                android:color="#D860B6">
            </solid>
        </shape>
    </item>
</selector>